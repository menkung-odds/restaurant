<div id="food_items" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 px-4 py-8 bg-gray-50">
  <% @food_items.each do |food_item| %>
    <div class="relative bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300 transform hover:-translate-y-1">
      <!-- Image Section -->
      <div class="h-48 bg-cover bg-center" 
           style="background-image: url('<%= food_item.image_url.presence || "/images/placeholder-food.jpg" %>');">
      </div>
      
      <!-- Content Section -->
      <div class="p-4">
        <!-- Food Name -->
        <h3 class="text-lg font-semibold text-gray-800 truncate">
          <%= food_item.name %>
        </h3>
        
        <!-- Price -->
        <p class="text-blue-600 font-bold text-sm mt-2">
          <%= number_to_currency(food_item.price, unit: "$") %>
        </p>
      </div>
      
      <!-- Hover Effect -->
      <div class="absolute inset-0 bg-black bg-opacity-20 opacity-0 hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
        <p class="text-white font-medium text-center">View Details</p>
      </div>
    </div>
  <% end %>
</div>
